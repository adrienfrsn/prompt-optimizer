spring:
  application:
    name: backend
  datasource:
    url: your-database-url # jdbc:postgresql://localhost:5432/po_db
    username: your-database-username # postgres
    password: your-database-password # postgres
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect

openai:
  api:
    key: sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXX # replace by your OpenAI API key
    smallModel: gpt-4o-mini
    largeModel: gpt-4o
    maxTokens: 6000

app:
  secret-key: your-secret
  expiration-time: 86400000 # (in ms, 1 day)